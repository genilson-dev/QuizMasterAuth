generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  email     String  @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      String  @default("USER") // Pode ser "USER" ou "ADMIN"
  // Relação com quizzes
  quizzes   Quiz[]
}


model Quiz {
  id         String      @id @default(uuid())
  title      String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  // Relação com usuário (criador do quiz)
  user       User       @relation(fields: [userId], references: [id])
  userId     String
  questions  Question[]
}

model Question {
  id         String      @id @default(uuid())
  text       String
  options    String[] // Array de opções
  answer     String   // Resposta correta
  quiz       Quiz     @relation(fields: [quizId], references: [id])
  quizId     String
}
